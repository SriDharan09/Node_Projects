<%- include("./partials/header.ejs") %>
<%- include("./partials/navBar.ejs") %>




  <div class="container mt-5 py-4">
    <h3 class="mb-4">All Blogs</h3>

    <% blogs.reverse() %>

    <% blogs.forEach(blog=>{ %>
    <div class="card my-3" >
       
        <div class="card-body mt-2">
          <h5 class="card-title"><%= blog.title %></h5>
          <p class="card-text"><%= blog.content.slice(0,80) %>... <a href="./blog/<%= blog.id %>">Read more</a>..</p>
          <p class="text-muted"><%= blog.posted %></p>
          <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read more</a>
          <a href="/edit/<%= blog._id %>" class="btn btn-warning">Edit</a>
          
        </div>
      </div>
      <%}) %>
</div>









